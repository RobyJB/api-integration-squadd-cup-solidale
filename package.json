{
  "name": "cup-solidale-ghl-sync",
  "version": "1.0.0",
  "description": "Sistema di sincronizzazione bidirezionale tra CUP Solidale e GoHighLevel",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "test": "node tests/run-all-tests.js",
    "test:ghl-users": "node 'API Squadd/test-ghl-users.js'",
    "test:ghl-events": "node 'API Squadd/test-ghl-events.js'",
    "test:ghl-calendars": "node 'API Squadd/test-ghl-calendars.js'",
    "test:cup-connection": "node 'API CUP Solidale/test-cup-connection.js'",
    "test:cup-sedi": "node 'API CUP Solidale/test-cup-sedi.js'",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "migrate": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio"
  },
  "keywords": ["cup-solidale", "gohighlevel", "sync", "healthcare", "booking"],
  "author": "Roberto Bondici",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3",
    "bull": "^4.12.2",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0",
    "crypto": "^1.0.1",
    "date-fns": "^2.30.0",
    "prisma": "^5.6.0",
    "@prisma/client": "^5.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.10",
    "@types/pg": "^8.10.7",
    "@types/cors": "^2.8.17",
    "@types/node-cron": "^3.0.11",
    "@types/bull": "^4.10.0",
    "@types/jest": "^29.5.8",
    "typescript": "^5.2.2",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.53.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}